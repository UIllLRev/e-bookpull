<form>
<table class="mdl-data-table mdl-js-data-table" style="table-layout:auto">
<tbody>
<tr><th>Citation</th>
<td><div class="mdl-textfield mdl-js-textfield">
{{input value=model.citation class="mdl-textfield__input"}}
</div></td></tr>
<tr><th>URL</th>
<td><div class="mdl-textfield mdl-js-textfield">
{{input value=model.url class="mdl-textfield__input"}}
</div></td></tr>
<tr><th>Ordered</th>
<td><div class="mdl-textfield mdl-js-textfield">
{{input value=model.ordered class="mdl-textfield__input"}}
</div></td></tr>
<tr><th>Comments</th>
<td><div class="mdl-textfield mdl-js-textfield">
{{textarea value=model.comments class="mdl-textfield__input"}}
</div></td></tr>
<tr><th>Status</th>
<td><div class="mdl-textfield mdl-js-textfield">
{{#power-select selected=model.status options=statuses onchange=(action (mut model.status)) as |name|}}
{{source-status name}}
{{/power-select}}
</div></td></tr>
</tbody>
</table>
{{file-upload url="/upload"}}
{{#mdl-button action="save"}}Save{{/mdl-button}}
</form>
{{outlet}}
