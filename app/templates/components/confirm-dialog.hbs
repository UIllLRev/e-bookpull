<dialog class="mdl-dialog">
  <h4 class="mdl-dialog__title">{{title}}</h4>
  <div class="mdl-dialog__content">
    {{message}}
  </div>
  <div class="mdl-dialog__actions">
    {{#mdl-button isRaised=true click=(action "yes")}} {{yes_message}} {{/mdl-button}}
    {{#mdl-button isRaised=true isAccent=true click=(action "no")}} {{no_message}} {{/mdl-button}}
  </div>
</dialog>
