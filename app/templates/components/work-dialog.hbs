{{#mdc-dialog show=showDialog title="Edit Work" accepting=(action "save") close=(action "close")}}
  <form>
    <table>
      <tbody>
        <tr>
          <td>
            {{mdc-textfield label="Author" value=model.author}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-textfield label="Title" value=model.title}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-textfield label="Volume" value=model.volume}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-textfield label="Issue" value=model.issue}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-textarea label="Comments" value=model.comments}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-textarea label="Bookpuller" value=model.bookpuller}}
          </td>
        </tr>
        <tr>
          <td>
            {{file-upload label="Upload File" endpoint="import" work=model disabled=model.isNew complete="uploadComplete" progress="uploadProgress" error="uploadError"}}
          </td>
        </tr>
        <tr>
          <td>
            {{mdc-linear-progress progress=fileUploadProgress}}
          </td>
        </tr>
      </tbody>
    </table>
  </form>
  <footer class="mdc-dialog__actions">
    {{#mdc-dialog-button style="raised" default=true action="accept"}} Save {{/mdc-dialog-button}}
    {{#mdc-dialog-button style="raised" action="close"}} Cancel {{/mdc-dialog-button}}
    {{#mdc-dialog-button style="raised" click=(action "delete")}} <i class="material-icons">delete_forever</i> {{/mdc-dialog-button}}
  </footer>
{{/mdc-dialog}}
{{#mdc-dialog show=doConfirm title="Really Delete?" accept=(action "reallyDelete") acceptButtonText="Yes, Really Delete"closeButtonText="cancel"}}
  You sure about that?
{{/mdc-dialog}}
