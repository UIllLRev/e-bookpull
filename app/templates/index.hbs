<table id="works" class="mdl-data-table mdl-js-data-table">
<thead>
<tr>
<th></th>
<th></th>
<th {{action 'changesort' 'author'}} class="mdl-data-table__cell--non-numeric">Author
{{{if (and (eq sortKey 'author') (eq sortOrder 'asc')) '&#9650;'}}}
{{{if (and (eq sortKey 'author') (eq sortOrder 'desc')) '&#9660;'}}}
</th>
<th {{action 'changesort' 'bookpuller'}} class="mdl-data-table__cell--non-numeric">Bookpuller
{{{if (and (eq sortKey 'bookpuller') (eq sortOrder 'asc')) '&#9650;'}}}
{{{if (and (eq sortKey 'bookpuller') (eq sortOrder 'desc')) '&#9660;'}}}
</th>
<th {{action 'changesort' 'volume'}}>Volume
{{{if (and (eq sortKey 'volume') (eq sortOrder 'asc')) '&#9650;'}}}
{{{if (and (eq sortKey 'volume') (eq sortOrder 'desc')) '&#9660;'}}}
</th>
<th {{action 'changesort' 'issue'}}>Issue
{{{if (and (eq sortKey 'issue') (eq sortOrder 'asc')) '&#9650;'}}}
{{{if (and (eq sortKey 'issue') (eq sortOrder 'desc')) '&#9660;'}}}
</th>
<th {{action 'changesort' 'title'}} class="mdl-data-table__cell--non-numeric">Title
{{{if (and (eq sortKey 'title') (eq sortOrder 'asc')) '&#9650;'}}}
{{{if (and (eq sortKey 'title') (eq sortOrder 'desc')) '&#9660;'}}}
</th>
</tr>
</thead>
<tbody>
{{#each sorted as |work|}}
<tr>
<td>{{#mdl-button isRaised=true click=(action 'edit' work)}} Edit {{/mdl-button}}</td>
<td>{{#mdl-button isRaised=true click=(action 'sources' work)}} Sources {{/mdl-button}}</td>
<td class="mdl-data-table__cell--non-numeric">{{work.author}}</td>
<td class="mdl-data-table__cell--non-numeric">{{work.bookpuller}}</td>
<td>{{work.volume}}</td>
<td>{{work.issue}}</td>
<td class="mdl-data-table__cell--non-numeric">{{work.title}}</td>
</tr>
{{/each}}
</tbody>
</table>
{{mdl-button isFloating=true icon='add' click=(action 'add')}}
